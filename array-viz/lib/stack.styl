def_v(value, defValue)
    if value
        value
    else
        defValue

_defStackOpt = {
  dir : 'horizontal',
  mode : 'wrap'
}

stack(options = {})
  $dir=def_v(options['dir'], _defStackOpt['dir'])
  $mode=def_v(options['mode'], _defStackOpt['mode'])
  display flex
  align-items center
  if $dir == 'horizontal'
    flex-direction row
  else
    flex-direction column

  > *
    if $dir == 'horizontal'
      height 100%

  flex-wrap nowrap
  if $mode == 'wrap'
    flex-wrap wrap
    > *
      flex unset

  else if $mode == 'fill-last'
    > *
      flex 1
    > *:first-child
      flex unset
      flex-shrink 0
  else if $mode == 'fill-first'
    > *
      flex unset
      flex-shrink 0
    > *:first-child
      flex 1

  else if $mode == 'equal'
    > *
      flex 1

.stack
  &.stack-wrap
    stack({mode : 'wrap'})
  &.stack-fill-last
    stack({mode : 'fill-last'})
  &.stack-fill-first
    stack({mode : 'fill-first'})
  &.stack-equal
    stack({mode : 'equal'})




.flex-center
  display flex
