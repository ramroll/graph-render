@import './stack'

.line
  border-bottom 1px dashed black
  padding 10Px 0

.line-01
  stack('horizontal', {mode : 'wrap'})
  padding 10px
  label
    border-radius 5px
    border 1px solid rgba(200, 200, 200, .5)
    margin-right 10px
    padding 3px 5px
    background-color #f2f3f3
    color #666
    margin-bottom 10px


.line-02
  background-color pink 
  stack('horizontal', {mode : 'equal'})
  div 
    height 100% 
    text-align center



.line-03
  stack('horizontal', {mode : 'first-fill'})
  height 100px
  >div:nth-child(1)
    background-color yellow
  >div:nth-child(2)
    background-color blue
    width 100px


.line-04
  stack('horizontal', {mode : 'center-fill'})
  height 100px
  >div:nth-child(1)
    width 100px
    background-color skyblue
  >div:nth-child(2)
    background-color red
  >div:nth-child(3)
    background-color green
    width 100px


.line-05
  stack('horizontal', {mode : 'last-fill'})
  height 100px
  >div:nth-child(1)
    background-color yellow
    width 100px
  >div:nth-child(2)
    background-color blue

